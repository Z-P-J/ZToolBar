<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#eeeeee"
    >



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <View
                android:layout_width="match_parent"
                android:layout_height="80dp"/>

            <com.zpj.widget.toolbar.ZSearchBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:z_toolbar_titleBarColor="@color/colorPrimary"
                android:layout_marginTop="10dp"
                />

            <com.zpj.widget.toolbar.ZToolBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:z_toolbar_titleBarColor="@color/colorPrimary"
                app:z_toolbar_leftType="imageButton"
                app:z_toolbar_centerText="@string/app_name"
                app:z_toolbar_centerSubText="@string/app_name"
                app:z_toolbar_center_text_gravity="center"
                app:z_toolbar_rightType="imageButton"
                app:z_toolbar_rightImageResource="@drawable/ic_close_black_24dp"
                android:layout_marginTop="10dp"
                />

            <com.zpj.widget.toolbar.ZToolBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:z_toolbar_isLightStyle="false"
                app:z_toolbar_titleBarColor="#ffffff"
                app:z_toolbar_leftType="imageButton"
                app:z_toolbar_centerCustomView="@layout/layout_custom_center_view"
                app:z_toolbar_rightType="imageButton"
                app:z_toolbar_rightImageResource="@drawable/ic_close_black_24dp"
                android:layout_marginTop="10dp"
                />

            <com.zpj.widget.toolbar.ZToolBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:z_toolbar_titleBarColor="#ffffff"
                app:z_toolbar_leftType="textView"
                app:z_toolbar_leftText="666"
                app:z_toolbar_centerText="@string/app_name"
                app:z_toolbar_rightType="imageButton"
                app:z_toolbar_rightImageResource="@drawable/ic_close_black_24dp"
                android:layout_marginTop="10dp"
                />

            <com.zpj.widget.toolbar.ZToolBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:z_toolbar_isLightStyle="false"
                app:z_toolbar_titleBarColor="#000000"
                app:z_toolbar_statusBarColor="#000000"
                app:z_toolbar_leftType="imageButton"
                app:z_toolbar_centerText="@string/app_name"
                app:z_toolbar_fillStatusBar="true"
                app:z_toolbar_rightType="textView"
                app:z_toolbar_rightText="padding=4dp"
                app:z_toolbar_rightTextSize="10sp"
                android:layout_marginTop="10dp"
                app:z_toolbar_background="@drawable/search_input_bg"
                app:z_toolbar_padding="4dp"
                />

            <com.zpj.widget.toolbar.ZSearchBar
                android:id="@+id/search_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:z_toolbar_centerSearchEditable="true"
                app:z_toolbar_hint_text="请输入关键词"
                app:z_toolbar_leftImageResource="@drawable/ic_search_netdisk"
                app:z_toolbar_showRightImageButton="false"
                app:z_toolbar_background="@drawable/search_input_bg"
                />

            <com.zpj.widget.toolbar.ZSearchBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:z_toolbar_titleBarColor="#ffffff"
                app:z_toolbar_hint_text_color="#258944"
                app:z_toolbar_content_text_color="@color/colorAccent"
                app:z_toolbar_content_text_size="12sp"
                app:z_toolbar_content_text_gravity="center"
                android:layout_marginTop="10dp"
                />

            <com.zpj.widget.toolbar.ZSearchBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:z_toolbar_titleBarColor="#cccccc"
                android:layout_marginTop="10dp"
                />

            <com.zpj.widget.toolbar.ZToolBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:z_toolbar_titleBarColor="#80000000"
                app:z_toolbar_leftType="imageButton"
                app:z_toolbar_centerText="@string/app_name"
                android:layout_marginTop="10dp"
                />

            <com.zpj.widget.toolbar.ZToolBar
                android:id="@+id/test_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:z_toolbar_titleBarColor="#ffffff"
                app:z_toolbar_leftType="imageButton"
                app:z_toolbar_centerText="@string/app_name"
                app:z_toolbar_rightType="textView"
                app:z_toolbar_rightText="点击切换背景"
                android:layout_marginTop="10dp"
                />

            <com.zpj.widget.toolbar.ZToolBar
                android:id="@+id/test_bar_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:z_toolbar_titleBarColor="#ffffff"
                app:z_toolbar_leftType="imageButton"
                app:z_toolbar_centerText="@string/app_name"
                app:z_toolbar_centerSubText="@string/app_name"
                app:z_toolbar_rightType="textView"
                app:z_toolbar_rightText="点击设置颜色"
                android:layout_marginTop="10dp"
                />

            <com.zpj.widget.toolbar.ZToolBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:z_toolbar_isLightStyle="true"
                app:z_toolbar_titleBarColor="#000000"
                app:z_toolbar_leftType="imageButton"
                app:z_toolbar_centerText="@string/app_name"
                app:z_toolbar_rightType="textView"
                app:z_toolbar_rightText="isLightStyle=true"
                android:layout_marginTop="10dp"
                />

            <com.zpj.widget.toolbar.ZToolBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:z_toolbar_isLightStyle="false"
                app:z_toolbar_titleBarColor="#000000"
                app:z_toolbar_leftType="imageButton"
                app:z_toolbar_centerText="@string/app_name"
                app:z_toolbar_rightType="textView"
                app:z_toolbar_rightText="isLightStyle=false"
                android:layout_marginTop="10dp"
                />

            <com.zpj.widget.toolbar.ZToolBar
                android:id="@+id/test_bar_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:z_toolbar_isLightStyle="false"
                app:z_toolbar_titleBarColor="#000000"
                app:z_toolbar_leftType="imageButton"
                app:z_toolbar_centerText="@string/app_name"
                app:z_toolbar_rightType="textView"
                app:z_toolbar_rightText="点击设置setLightStyle"
                android:layout_marginTop="10dp"
                />

            <com.zpj.widget.toolbar.ZToolBar
                android:id="@+id/test4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:z_toolbar_titleBarColor="#ff2196f3"
                app:z_toolbar_fillStatusBar="true"
                app:z_toolbar_statusBarColor="#ff2196f3"
                app:z_toolbar_statusBarMode="light"
                app:z_toolbar_leftType="textView"
                app:z_toolbar_leftText="取消"
                app:z_toolbar_leftTextColor="#ffffff"
                app:z_toolbar_rightType="textView"
                app:z_toolbar_rightText="全选"
                app:z_toolbar_rightTextColor="#ffffff"
                app:z_toolbar_centerType="textView"
                app:z_toolbar_centerText="选择下载文件"
                app:z_toolbar_centerTextColor="#ffffff"
                app:z_toolbar_centerSubText="已选择1个文件，占用618MB"
                app:z_toolbar_centerSubTextColor="#ffffff"
                app:z_toolbar_centerTextMarquee="true"
                />

            <com.zpj.widget.toolbar.ZToolBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:z_toolbar_titleBarColor="#ff2196f3"
                app:z_toolbar_fillStatusBar="true"
                app:z_toolbar_statusBarColor="#ff2196f3"
                app:z_toolbar_statusBarMode="light"
                app:z_toolbar_leftType="textView"
                app:z_toolbar_leftText="取消"
                app:z_toolbar_leftTextColor="#ffffff"
                app:z_toolbar_rightType="textView"
                app:z_toolbar_rightText="全选"
                app:z_toolbar_rightTextColor="#ffffff"
                app:z_toolbar_centerType="textView"
                app:z_toolbar_centerText="选择下载文件"
                app:z_toolbar_centerTextColor="#ffffff"
                app:z_toolbar_background="@drawable/shape_gradient"
                app:z_toolbar_background_fill_status_bar="true"
                />

        </LinearLayout>

    </ScrollView>

    <com.zpj.widget.toolbar.ZToolBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:z_toolbar_fillStatusBar="true"
        app:z_toolbar_statusBarColor="@color/colorPrimaryDark"
        app:z_toolbar_titleBarColor="@color/colorPrimary"
        app:z_toolbar_leftType="imageButton"
        app:z_toolbar_centerText="@string/app_name"
        app:z_toolbar_centerSubText="demo"
        app:z_toolbar_rightType="textView"
        app:z_toolbar_rightText="test"
        app:z_toolbar_bottomShadowHeight="2dp"
        app:z_toolbar_bottomShadowStartColor="#000000"
        />

</FrameLayout>